# Database
DATABASE_URL="postgresql://user:password@localhost:5432/orion"

# Server
PORT=3000
NODE_ENV=development

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
LLM_PROVIDER=gemini  # Options: gemini, mock

# Phase 9: Structured Output
USE_STRUCTURED_OUTPUT=true  # Enable structured JSON responses with sections and metadata

# Phase 7: Adaptive Confidence Thresholds
# Strong confidence - bot answers directly without hedging
CONF_THRESHOLD_STRONG=0.8

# Weak confidence - bot adds cautious language
CONF_THRESHOLD_WEAK=0.5

# Escalation threshold - below this, bot may escalate
CONF_THRESHOLD_ESCALATE=0.3

# EMA smoothing factor for session confidence (0-1)
# Higher = more reactive, Lower = more stable
CONF_SMOOTHING_FACTOR=0.2
